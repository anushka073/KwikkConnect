<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KwikkConnectExpert" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Card style -->
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardElevation">2dp</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Theme without action bar for login -->
    <style name="Theme.KwikkConnectExpert.NoActionBar" parent="Theme.KwikkConnectExpert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.KwikkConnectExpert.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.KwikkConnectExpert.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card styles -->
    <style name="Widget.KwikkConnectExpert.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardElevation">4dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.KwikkConnectExpert.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.KwikkConnectExpert.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.KwikkConnectExpert.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.KwikkConnectExpert.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.KwikkConnectExpert.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources> 